$('.liked-btn').on('ajax:success', function() {
    $(this).parent().parent().find('.like_count')
    .html('<%= @post.get_likes.size %> &#128077');

    var button = $(this).closest('.liked-btn');
    button.html('Like');
    button.addClass('like-btn');
    button.removeClass('liked-btn')
});

