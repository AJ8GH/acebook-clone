<p class="button"><%= button_to "logout", destroy_user_session_path, method: :delete %></p>

<%= link_to new_post_path do %>
  New post
<% end %>

<div class="all-posts">

  <% @posts.each do |post| %>
  <div class="post">
    <p class="message"><%= post.message %></p>
    <form class="form" action="/posts/<%= post.id %>/edit">
      <input class="button" type="submit" id="submit_<%= post.id %>" value="update">
    </form>
    <%= form_for post do |form| %>
      <input type="hidden" name="_method" value="DELETE">
      <input class="button" type="submit" value="Delete">
    <% end %>
  </div>
  <% end %>

</div>
